<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.supenta.flitchio.taskerplugin">

    <application
        android:name=".FlitchioTaskerPluginApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/FlitchioTaskerTheme">

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.EditActivity"
            android:label="@string/title_activity_edit">

            <!-- This Intent filter allows the plug-in to be discovered by Tasker -->
            <intent-filter>
                <action android:name="net.dinglisch.android.tasker.ACTION_EDIT_EVENT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings">

        </activity>

        <receiver
            android:name=".receiver.QueryReceiver"
            android:exported="true"
            android:process=":background"
            tools:ignore="ExportedReceiver">

            <!-- This Intent filter allows the plug-in to discovered by Tasker and be queried -->
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.QUERY_CONDITION" />
            </intent-filter>
        </receiver>

        <receiver android:name=".receiver.FlitchioStatusReceiver">
            <intent-filter>
                <action android:name="com.supenta.flitchio.manager.communication.ACTION_FLITCHIO_CONNECTED" />
                <action android:name="com.supenta.flitchio.manager.communication.ACTION_FLITCHIO_DISCONNECTED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.FlitchioBindingService"
            android:exported="false"
            android:process=":background" />
    </application>

</manifest>