<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FlitchioTaskerTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Fab">
        <item name="android:layout_marginTop">0dp</item>
        <!-- Compensation for the rendering of the shadow in pre-Lollipop -->
        <item name="android:layout_marginBottom">-12dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="elevation">@dimen/fab_elevation</item>
        <item name="pressedTranslationZ">@dimen/fab_elevation_pressed</item>
    </style>

    <style name="FabBottomToolbar" parent="Fab">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

</resources>